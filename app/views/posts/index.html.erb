<h1>Here is a list of posts for a given user</h1>

<div class="to_all_container">
  <img class="user_photo" src="<%= @user.photo %>" alt="user photo">
  <div>
     <h2>Name: <%= @user.name %></h2>
     <h4>Number of posts: <%= @user.post_counter %></h4>
  </div>
</div>


 <% @posts.each do |post| %>
 <div class="to_all_container">
    <div>
      <h2><%= post.title %></h2>
      <p><%= post.text %></p>
      <div>
         <span>Comments: <%= post.comments_counter %></span>
         <span>Likes: <%= post.likes_counter %></span>
         <h5>
         <%= link_to "Details", user_post_path(post.author_id, post.id), class: "btn" %>
         </h5>
     </div>
    </div>  
 </div>
    
  <h1>All comments</h1>
  <div class="to_all_container">
   <% post.recent_comments.each do |comment| %>
      <h4>Username: <%= comment.user.name %> - <span> <%= comment.text %> </span> </h4>
   <% end %>
  </div>
 <% end %>

<div class="btn_container">
  <button class="btn" type="button">Pagination</button>
</div>