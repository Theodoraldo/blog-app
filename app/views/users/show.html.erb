<h1>Here is a given user</h1>

  <div class="to_all_container">
    <img class="user_photo" src="<%= @user.photo %>" alt="user photo">
    <div>
      <h2>Name: <%= @user.name %></h2>
      <h4>Number of posts: <%= @user.post_counter %></h4>
    </div>
 </div>

 <div class="bio">
  <h2>Bio</h2>
  <p><%= @user.bio %></p>
</div>




<div class="posts">
  <% @recent_posts.each do |post| %>
     <div>
       <div>
          <h2><%= post.title %></h2>
          <p><%= post.text %></p>
       </div>
       <div>
         <span>Comments: <%= post.comments_counter %></span>
         <span>Likes: <%= post.likes_counter %></span>
       </div>
     </div>     
  <% end %>
</div>

<div class="btn_container">
  <%= link_to "See all posts", user_posts_path(@user), class: "btn" %>
</div>